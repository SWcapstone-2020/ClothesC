<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff">


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_marginTop="60dp"
        android:layout_weight="1"
        android:scaleType="center"
        app:srcCompat="@drawable/ic_logo"
         />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="vertical">


        <EditText
            android:id="@+id/emailEditText"
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:hint="이메일"
            android:layout_marginBottom="5dp"
            android:ems="10"
            android:inputType="textEmailAddress"
            android:background="@drawable/ic_input"
            android:layout_gravity="center"
            android:drawableLeft="@drawable/ic_person_blue_24dp"
            android:paddingLeft="25dp"
            android:paddingBottom="5dp"
            android:drawablePadding="8dp"
            />

        <EditText
            android:id="@+id/passwordEditText"
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:background="@drawable/ic_input"
            android:ems="10"
            android:hint="비밀번호"
            android:inputType="textPassword"
            android:layout_gravity="center"
            android:drawableLeft="@drawable/ic_lock_blue_24dp"
            android:paddingLeft="25dp"
            android:paddingBottom="5dp"
            android:drawablePadding="8dp"
            />

        <Button
            android:id="@+id/loginButton"
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bt_find_pw"
            android:text="로그인"
            android:layout_gravity="center"
            android:textColor="#ffffff"
            style="?android:attr/borderlessButtonStyle"


            />
    </LinearLayout>

    <!--android:background="@drawable/login_button"!-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/searchPassword"
            android:layout_width="120dp"
            android:layout_height="26dp"
            android:layout_marginLeft="87dp"
            android:background="#ffffff"
            android:text="비밀번호 찾기"
            android:textColor="#6ECCFF"
            style="?android:attr/borderlessButtonStyle"
            />

        <Button
            android:id="@+id/signButton"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="120dp"
            android:layout_height="26dp"
            android:layout_marginRight="87dp"
            android:background="#ffffff"
            android:text="회원가입하기"
            android:textColor="#6ECCFF" />


    </LinearLayout>


</LinearLayout>
